@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #FFC1CC, #FF69B4);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
        }

        h1 {
            font-family: 'Great Vibes', cursive;
            font-size: 4em;
            margin-bottom: 0.5em;
            text-shadow: 2px 2px 5px #ff7fbf;
        }

        p {
            font-size: 1.5em;
            margin-bottom: 1.5em;
        }

        .heart {
            color: #ff0000;
            font-size: 2em;
            animation: beat 1s infinite;
        }

      
        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.3);
        }

        }

        a {
            color: #fff0f5;
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }

        .footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            font-size: 1em;
            color: #ffe6f0;
        }
    </style>
</head>
<body>
    <div>
        <h1>Welcome, My Love <span class="heart">❤️</span></h1>
        <p>This Valentine's Day is special because of you!</p>
        <p>Explore this little surprise I made for you 💖</p>
    </div>
    <div class="footer">
        Made with ❤️ for you
    </div>
</body>
</html>
